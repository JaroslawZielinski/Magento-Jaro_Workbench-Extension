<?xml version="1.0"?>
<layout version="0.1.0">

    <base_for_jaro_myscript_news_grid>
        <update handle="page_one_column"/>

        <remove name="my-content"/>

        <reference name="head">
            <action method="addItem">
                <type>js_css</type>
                <name>jaro_myscript/content.css</name>
            </action>
        </reference>
    </base_for_jaro_myscript_news_grid>

    <jaro_myscript_news_index>
        <update handle="base_for_jaro_myscript_news_grid"/>

        <reference name="content">
            <block type="jaro_myscript/news" name="jaro_mycript_content" template="jaro/newsgrid.phtml">
                <block type="jaro_myscript/news" name="jaro_mycript_search">
                    <action method="setTemplate" ifconfig="jaro_myscript/settings/search_enable">
                        <template>jaro/search.phtml</template>
                    </action>
                </block>
                <block type="core/template" name="news.form.row" template="jaro/newsformrow.phtml"/>
                <block type="core/template" name="news.row" template="jaro/newsrow.phtml"/>
            </block>
        </reference>
    </jaro_myscript_news_index>
</layout>